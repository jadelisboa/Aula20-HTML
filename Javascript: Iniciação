<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=, initial-scale=1.0">
    <title>Document</title>

    <script>
        $nome = prompt("Qual seu nome ?")
        document.writeln("O nome digitado foi: " + $nome)
    
        $sexo = prompt("Digite seu sexo? [M] ou [F]:")  

        if (($sexo == "M") || ($sexo == "m")) 
        {
            document.writeln("Masculino")
        }
        else 
        {
            document.writeln("Feminino")
        }

        $idade = prompt("Digite sua idade: ")
        if ($idade < 18) 
        {
            document.write("Menor de idade")
        }
        else 
        {
            document.write("Maior de idade")
        }

</script>
